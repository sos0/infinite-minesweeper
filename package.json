{
    "name": "infinite-minesweeper",
    "version": "1.0.0",
    "description": "Minesweeper on an infinte board",
    "type": "module",
    "directories": {
        "test": "test"
    },
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose --coverage",
        "format": "prettier --write {src,tests}/**.{html,js,css}",
        "lint": "eslint --fix src",
        "gh-pages": "gh-pages -d dist"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ziap/infinite-minesweeper.git"
    },
    "bugs": {
        "url": "https://github.com/ziap/infinite-minesweeper/issues"
    },
    "homepage": "infinite-minesweeper.vercel.app",
    "devDependencies": {
        "@types/jest": "^27.4.0",
        "eslint": "^8.8.0",
        "gh-pages": "^3.2.3",
        "jest": "^27.5.1",
        "jest-canvas-mock": "^2.3.1",
        "prettier": "^2.5.1",
        "vite": "^2.8.1"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "setupFiles": [
            "jest-canvas-mock"
        ]
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es2021": true
        },
        "extends": "eslint:recommended",
        "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module"
        },
        "rules": {}
    },
    "prettier": {
        "trailingComma": "none",
        "tabWidth": 4,
        "useTabs": false,
        "semi": false,
        "singleQuote": true,
        "bracketSameLine": true,
        "arrowParens": "avoid",
        "printWidth": 120
    }
}
